<h1> Entries for <%= link_to @prompt.title, prompt_path(@prompt) %> </h1>

  <div class ="main_image" style = "background-image: url(<%= @prompt.img_url %>)">

  </div>


<% @posts.each do |post| %>

<div class ="all_post_links">

    <h2> Post <%= @count %>: </h2>

    <div class="post_title_body" style="background-image: url(<%= @prompt.img_url %>); background-size: cover">

      <div class="post_text">

        <h3><%= post.title.upcase %></h3>

        <p><%= post.body %></p>

        <p class ="published_at"> Published at: <%= post.created_at %></p>

        <p style ="font-size: 10"> <%= link_to "Comment on this post", prompt_post_path(@prompt, post) %></p>

        <% @count+=1 %>

      </div>

    </div>

</div>

<% end %>
