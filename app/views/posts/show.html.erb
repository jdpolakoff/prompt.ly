<h2> Comment on this post for <%= link_to @prompt.title, prompt_path(@prompt) %> </h2>

<div class="post_title_body" style="background-image: url(<%= @prompt.img_url %>); background-size: cover">

  <div class="post_text">

    <h3><%= @post.title.upcase %></h3>

    <p><%= @post.body %></p>

    <p class ="published_at"> Published at: <%= @post.created_at %></p>

  </div>

</div>

  <br>

  <h1> Post new comment: </h1>

  <%= form_for [@post, @comment] do |f| %>

  <div class ="post_body">

    <%#= f.label "Comment" %>
    <%= f.text_area :comment %><br><br>

  </div>

    <br>

    <%= f.submit %> <br><br>

    <% end %>

  <% @comments.each do |comment| %>

    <div class ="all_comment">

        <p class ="comment_time" style ="background-image: url(<%= @prompt.img_url %>); background-size: cover"> Posted at: <%= comment.created_at %></p>

        <p><%= comment.comment %><br></p>

        <p style ="margin-bottom: 0"><%= link_to "Edit or delete this comment", edit_post_comment_path(@post, comment) %></p>

    </div>

    <br><br>

    <% end %>
