<!DOCTYPE html>
<html>
  <head>
    <title>Promptly</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
        <header>
            <div class ="header_h3"><h3><%= link_to "Home", root_path %> </h3></div>
            <div class ="header_h3"><h3> <%= link_to "All Prompts", prompts_path %> </h3></div>
            <div class ="header_h3"><h3> <%= link_to "Create a new prompt", new_prompt_path %> </h3></div>
        </header>
    <div class="page_wrap">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </body>
</html>
