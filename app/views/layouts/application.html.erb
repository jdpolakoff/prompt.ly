<!DOCTYPE html>
<html>
  <head>
    <title>Promptly</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="page_wrap">
        <header>
            <div class ="header_h3"><h3><%= link_to "About", welcome_about_path %> </h3></div>
            <div class ="header_h3"><h3><%= link_to "Home", root_path %> </h3></div>
            <div class ="header_h3"><h3> <%= link_to "All Prompts", prompts_path %> </h3></div>
            <div class ="header_h3"><h3> <%= link_to "Create a new prompt", new_prompt_path %> </h3></div>
          <% if !current_user %>
            <div class ="header_h3"><h3><%= link_to "Sign Up", new_user_registration_path %></h3></div>
            <div class ="header_h3"><h3><%= link_to "Sign In", new_user_session_path %></h3></div>
          <% else %>
            <div class ="header_h3"><h3><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></h3></div>
            <p style="float:right; margin-right: 5px; color: black">Currently logged in as:<br> <%= current_user.email %></p>
            <p class="notice"><%= notice %></p>
            <p class="alert"><%= alert %></p>
          <% end %>
        </header>
          <%= yield %>
        <!-- <footer>
          <div class ="header_h3"><h3> Created by Prompt.ly Enterprises LLC </h3></div>
        </footer> -->
    </div>
  </body>
</html>
