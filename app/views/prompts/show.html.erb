<div class="prompt">

      <h1> <%= @prompt.title %> </h1><br>

        <div class ="main_image1" style = "background-image: url(<%= @prompt.img_url %>); margin-bottom: 5%"></div>

          <%= link_to like_prompt_path(@prompt), class: 'like2', method: :put do %>
            <div class="like_button"><%= image_tag "upvote.png"%></div>
            <div class="like_number"><h2><%= @prompt.get_upvotes.size %></h2></div>
            <% end %>

            <br>
          <%= link_to unlike_prompt_path(@prompt), class: 'like2', method: :put do %>
            <div class="unlike_button"><%= image_tag "downvote.png"%></div><div class="unlike_number"><h2><%= @prompt.get_downvotes.size %></h2></div>
            <% end %>

  <div> <h3 style="margin-top: -1%"> <%= @prompt.prompt %> <br><br> - Submitted by <%= @prompt.user.email %> </h3></div>

<nav class="prompt_buttons">

  <div class="prompt_show"><h3><%= link_to "Let's start writing!", new_prompt_post_path(@prompt) %></h4></div>
  <%# It looks like you are combinging h3's with h4's above %>
  <div class="prompt_show"><h3><%= link_to "Next!", prompt_path(@random_prompt) %></h4></div>

  <div class="prompt_show"><h3><%= link_to "Read all entries for this prompt.", prompt_posts_path(@prompt) %></h4></div>

  <div class="prompt_show"><h3><%= link_to "Edit or delete this prompt.", edit_prompt_path(@prompt) %></h4></div>
  <%# In HTML, no spaces around `=` and always use double quotations %>
  <%# Perhaps think about how you could make all of these buttons of uniform size %>
  <%# Also, if you wanted, you could make the entire area of the button clickable as a link. Ex: %>
  <!-- <% link_to edit_prompt_path(@prompt) do  %>
    <div class="prompt_show">
      <h3>Edit or delete this prompt</h3>
    </div>
  <% end %> -->

</nav>

</div>
